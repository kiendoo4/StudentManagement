<UserControl x:Class="StudentManagement___IT008.View.ClassesList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentManagement___IT008.View"
             mc:Ignorable="d" 
             d:DesignHeight="670" d:DesignWidth="1220">
    <Grid>
        <Border Background="#FBF7F8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"></RowDefinition>
                    <RowDefinition Height="3*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="122*"></ColumnDefinition>
                        <ColumnDefinition Width="141*"></ColumnDefinition>
                        <ColumnDefinition Width="347*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Text="Danh sách lớp học" FontSize="21" FontFamily="Paytone One" Height="35" Width="202" Margin="91,7,0,0" Grid.ColumnSpan="2"/>

                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <ComboBox SelectedIndex="0" FontSize="17" FontFamily="Quicksand Semibold" VerticalAlignment="Bottom" Margin="199,0,333,584.8" Height="34">
                            <ComboBoxItem Content="Tìm kiếm theo" IsEnabled="False" Visibility="Hidden"/>
                        </ComboBox>
                        <Border Margin="419,10,18,585" Background="#FFEAEAEA" CornerRadius="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="6*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0" Source="/Icons/icons8-search-30.png" Margin="20,5,17,5"></Image>
                                <TextBlock  Grid.Column="1" IsEnabled="False" Text="Tìm kiếm" FontSize="17" FontFamily="Quicksand Semibold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="1,0,0,0">
                                </TextBlock>
                            </Grid>
                        </Border>
                        <DataGrid x:Name="Data" HorizontalAlignment="Left" Height="490" Margin="29,53,0,0" VerticalAlignment="Top" Width="685">
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Width="50"/>
                                <DataGridTextColumn Header="STT" Binding="{Binding Name}" />
                                <DataGridTextColumn Header="Khối" Binding="{Binding Name}" />
                                <DataGridTextColumn Header="Lớp" Binding="{Binding Name}" />
                                <DataGridTextColumn Header="Giáo viên chủ nhiệm" Binding="{Binding Name}" />
                                <DataGridTextColumn Header="Sỉ số" Binding="{Binding Name}" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button HorizontalAlignment="Center" Width="173" Height="40" VerticalAlignment="Center" Cursor="Hand" Margin="441,565,118,23.8">

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="15" BorderThickness="0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#522c53"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="False">
                                                        <Setter Property="Background" Value="Purple"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <TextBlock Text="Thêm lớp học"  HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Paytone One" FontSize="19" Foreground="White" >
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button HorizontalAlignment="Center" Width="82" Height="40" VerticalAlignment="Center" Cursor="Hand" Margin="630,565,20,23.8">

                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border CornerRadius="15" BorderThickness="0">
                                        <Border.Style>
                                            <Style TargetType="{x:Type Border}">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FFD0674F"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="False">
                                                        <Setter Property="Background" Value="#FFFF876C"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <TextBlock Text="Xóa"  HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Paytone One" FontSize="19" Foreground="White" />
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                    <Grid Grid.Column="1">

                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
