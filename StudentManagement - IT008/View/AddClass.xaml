<UserControl x:Class="StudentManagement___IT008.View.AddClass"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentManagement___IT008.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300">
    <Grid>
        <!--<Label Content="Thêm môn học" FontFamily="Paytone One" FontSize="25"></Label>-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" >
                <Label Content="Thêm môn học" FontFamily="Paytone One" FontSize="25" Margin="46,41,55,0"></Label>
            </Grid>
            <Grid Grid.Row="1" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Margin="25,15,25,15" BorderBrush="Gray" BorderThickness="0.5">
                    <StackPanel Orientation="Horizontal" Margin="0,0,-20,0">
                        <Label Content="Mã môn" FontSize="17" FontFamily="Quicksand Semibold" VerticalAlignment="Center" />
                        <TextBox  FontSize="17" FontFamily="Quicksand Semibold" Height="29" Width="185"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="1" Margin="25,15,25,15" BorderBrush="Gray" BorderThickness="0.5">
                    <StackPanel Orientation="Horizontal" Margin="0,0,-20,0">
                        <Label Content="Tên môn " FontSize="17" FontFamily="Quicksand Semibold" VerticalAlignment="Center" />
                        <TextBox  FontSize="17" FontFamily="Quicksand Semibold" Height="29" Width="172"/>
                    </StackPanel>
                </Border>

            </Grid>
            <Button Grid.Row="2" HorizontalAlignment="Left" Width="118" Height="42" VerticalAlignment="Top" Cursor="Hand" Margin="150,291,0,0">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20" BorderThickness="0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#522c53"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="False">
                                            <Setter Property="Background" Value="Purple"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <TextBlock Grid.Column="1" Text="Hoàn tát"  HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Paytone One" FontSize="18" Foreground="White" Margin="1,0,0,0">
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</UserControl>
